# STP Website - Apache Configuration (Apache 2.4 compatible)
# Configured for: glo.tekquora.com (domain root)
# RewriteBase: /
# Routes all requests to pages/ folder with proper security

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Exit rewriting if file or directory exists
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [END]
    
    # Block direct access to sensitive directories
    RewriteRule ^config/ - [F,END]
    
    # Allow these directories to pass through
    RewriteRule ^(assets|backend|admin|Doc|tools)/ - [END]
    
    # Root path (/) serves pages/index.html
    RewriteRule ^$ pages/index.html [END]
    
    # Requested .html files map to pages/ folder
    # e.g., /programs.html -> pages/programs.html
    RewriteRule ^([a-zA-Z0-9_-]+)\.html$ pages/$1.html [END]
    
    # Clean URLs: /programs -> pages/programs.html
    # e.g., /programs -> pages/programs.html
    RewriteRule ^([a-zA-Z0-9_-]+)/?$ pages/$1.html [END]
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/x-javascript
</IfModule>

# Block access to sensitive files
<FilesMatch "(\.env|\.htaccess|\.git|db_config\.php)">
    Order allow,deny
    Deny from all
</FilesMatch>
