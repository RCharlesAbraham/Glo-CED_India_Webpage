# STP Website - Apache Configuration (Apache 2.4 compatible)
# Works with /STP/ subdirectory or at domain root

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Set RewriteBase (adjust if deploying to different location)
    RewriteBase /STP/
    
    # Allow access to actual files and directories
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Allow API endpoints to pass through
    RewriteRule ^backend/contact_process\.php$ backend/contact_process.php [L]
    
    # Allow admin area
    RewriteRule ^admin/ - [L]
    
    # Block direct access to config files (while allowing PHP execution)
    RewriteRule ^config/ - [F,L]
    
    # Redirect root requests to pages/index.html
    RewriteRule ^$ pages/index.html [L]
    
    # Serve pages from /pages/ for requests like /page.html
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^([A-Za-z0-9_-]+)\.html$ pages/$1.html [L]
    
    # Clean URLs - allow /about, /services, etc. to map to /pages/about.html
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^([A-Za-z0-9_-]+)/?$ pages/$1.html [L]
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/x-javascript
</IfModule>

# Block access to sensitive files
<FilesMatch "(\.env|\.htaccess|\.git|db_config\.php)">
    Order allow,deny
    Deny from all
</FilesMatch>
